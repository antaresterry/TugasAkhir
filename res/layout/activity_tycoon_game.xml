<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tg_title"
    android:gravity="bottom"
    tools:context=".CardGameMainMenu" >
    
    <Button
        android:id="@+id/tg_start"
        android:layout_width="220dp"
        android:layout_height="42dp"
        android:layout_above="@+id/tg_help"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape"
        android:text="@string/tg_start"
        android:textColor="@color/WHITE"
        android:textSize="24sp" />

    <Button
        android:id="@+id/tg_help"
        android:layout_width="220dp"
        android:layout_height="42dp"
        android:layout_alignLeft="@+id/tg_start"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/shape"
        android:text="@string/tg_help"
        android:textColor="@color/WHITE" 
        android:textSize="24sp" />

</RelativeLayout>