<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/tg_input_background" >
    
    <TextView
        android:id="@+id/tg_question"
        android:background="@drawable/text_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:textColor="@color/BLACK"
        android:textSize="20sp"
        android:gravity="center" />
    
    <RadioButton
        android:id="@+id/tg_ipa1"
        android:background="@drawable/text_background"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/WHITE"
        android:textSize="20sp"
        android:paddingLeft="40dp" />
    
    <RadioButton
        android:id="@+id/tg_ipa2"
        android:background="@drawable/text_background"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/WHITE"
        android:textSize="24sp"
        android:paddingLeft="40dp"  />
    
    <RadioButton
        android:id="@+id/tg_ips1"
        android:background="@drawable/text_background"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/WHITE"
        android:textSize="24sp"
        android:paddingLeft="40dp"  />
    
    <RadioButton
        android:id="@+id/tg_ips2"
		android:background="@drawable/text_background"	
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/WHITE"
        android:textSize="24sp"
        android:paddingLeft="40dp"  />
    
    <TextView
        android:id="@+id/tg_done"
        android:background="@drawable/shape"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/tg_start"
        android:clickable="true"
        android:text="Done"
        android:textColor="@color/WHITE"
        android:textSize="30sp"
        android:gravity="center" />

</LinearLayout>