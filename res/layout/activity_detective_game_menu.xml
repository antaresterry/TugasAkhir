<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dgmenu"
    android:padding="50dp"
    tools:context="com.skripsi.atma.DetectiveGameMenu" >
    
<Button
        android:id="@+id/DGloadGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/blueshape"
        android:padding="10dp"
        android:text="@string/DG_Menu2"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/DGnewGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/blueshape"
        android:padding="10dp"
        android:text="@string/DG_Menu1"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/DGoptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/blueshape"
        android:padding="10dp"
        android:text="@string/DG_Menu3"
        android:textColor="@android:color/white" />

</RelativeLayout>